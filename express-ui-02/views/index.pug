extends layout

block content
  nav(class='navbar navbar-expand-md navbar-dark fixed-top bg-dark')
    .container-fluid
        a(class='navbar-brand' href='#') Fixed Navbar
        button(
            class='navbar-toggler'
            type='button'
            data-bs-toggle='collapse'
            data-bs-target='#navbarCollapse'
            aria-controls='navbarCollapse'
            aria-expanded='false'
            aria-label='Toggle navigation')
          span(class='navbar-toggler-icon')
        .collapse(class='navbar-collapse' id='navbarCollapse')
          ul(class='navbar-nav me-auto mb-2 mb-md-0')
            li.nav-item
              a.nav-link(class='active' aria-current='page' href='#') Home
            li.nav-item
              a.nav-link(href='#') Link
            li.nav-item
              a.nav-link(class='disabled') Disabled
          form.d-flex
            input(class='form-control me-2' type='search' placeholder='Search' aria-label='Search')
            button(class='btn btn-outline-success' type='submit') Search
  main.container
    .bg-light(class='p-5 rounded')
      h1 Welcome to #{title}
      p.lead
        | This example is a quick exercise to illustrate how fixed to top navbar works. As you scroll, it will remain
        | fixed to the top of your browserâ€™s viewport.
      a.btn(class='btn-lg btn-primary' href='#' role='button') View navbar docs &raquo;
